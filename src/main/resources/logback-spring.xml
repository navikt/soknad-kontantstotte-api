<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="ROOT_LOG_LEVEL" value="INFO"/>

    <include resource="logback-default-without-abac.xml"/>

    <!-- Spesiell håndtering av loggeren no.nav.log.LogFilter for å forhindre logging av isAlive-sjekker o.l. -->
    <appender name="stdout_json_with_filter"  class="no.nav.log.MaskingAppender">
        <filter class="ch.qos.logback.core.filter.EvaluatorFilter">
            <evaluator>
                <matcher>
                    <Name>isalive</Name>
                    <!-- filter out odd numbered statements -->
                    <regex>status=200, method=GET, path=(\/api\/status\/isAlive|\/actuator\/prometheus)</regex>
                </matcher>

                <expression>isalive.matches(formattedMessage)</expression>
            </evaluator>
            <OnMismatch>NEUTRAL</OnMismatch>
            <OnMatch>DENY</OnMatch>
        </filter>
        <appender name="stdout_json_masked_with_filter" class="ch.qos.logback.core.ConsoleAppender">
            <encoder class="net.logstash.logback.encoder.LogstashEncoder" />
        </appender>
    </appender>

    <logger name="no.nav.log.LogFilter" additivity="false">
        <!-- nais+local -->
        <appender-ref ref="stdout_json_with_filter"/>
        <appender-ref ref="metrics"/>
    </logger>

</configuration>
